<h1><%= @cocktail.name %></h1>


<% @cocktail.doses.each do |dose| %>
  <p><%= "#{dose.description} of #{dose.ingredient.name}"%>
   <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %></p>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h2>Add dose</h2>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.association :ingredient %>
        <%= f.input :description %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

<div class="link_to">
   <%= link_to 'See all cocktails', cocktails_path %>
</div>



